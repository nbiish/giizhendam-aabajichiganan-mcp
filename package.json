    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.17.30",
    "esbuild": "^0.25.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "preferGlobal": true
